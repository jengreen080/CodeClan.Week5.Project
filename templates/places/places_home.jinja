{% extends "base.jinja" %}
<h1>My bucket list places</h1>
{% block content %}

{% for place in list_of_places %}
<div class ="main_content">
<section class = "place_article">
    <h2>{{place.place_name}}</h2>
    <h3>Country: {{place.country.country_name}}</h3>
    <p>Reason to go: {{place.place_description}}</p>
    <p>
    {% if place.visited == True %}
    Status: <i>Been there, done that. Got the postcard</i>
    {# <i class="fa-duotone fa-envelopes-bulk fa-beat" style="--fa-primary-color: #7e501b; --fa-secondary-color: #7e501b;"></i> #}
    {% else %}
    Status: <i>On the bucket list!</i>
    {# <i class="fa-duotone fa-earth-americas fa-beat" style="--fa-primary-color: #50b970; --fa-secondary-color: #5aa1ce;"></i> #}
    {% endif %}
    </p>
    <form class = "update_button" action = "/places/{{place.place_id}}/edit" method = "GET">
        <button type="submit">Update place</button>
    </form>
    <form class = "delete_button" action = "/places/{{place.place_id}}/delete" method = "POST">
        <button class = "delete">Delete</button>
    </form>
</section>
</div>
{% endfor%}
{% endblock %}